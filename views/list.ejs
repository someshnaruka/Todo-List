<%- include('header'); -%>
<div class="box" id="heading"><h1><%=listTitle %></h1></div>

<div class="box">
    <form class="item" action="/" method="post">
        <input type="text" placeholder="Enter list item" name="input" autocomplete="off">
        <button type="submit" name="list" value=<%=listTitle%> >+</button>
        </form>

<% listItems.forEach((item)=>{ %>
  <form action="/delete" method="post">
  <div class="item">
    <input type="checkbox" name="deleteItem" value ="<%=item._id %>" onChange="this.form.submit()">
     <!-- to only get name fields  -->
   <p> <%= item.name %></p> 
  </div>
  <input type="hidden" name="listName" value="<%= listTitle %>"> </input>
</form>
<% }) %>
</div>

<%- include('footer'); -%>